<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_background_search"
    android:clickable="true"
    android:id="@+id/mainBG"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo_animated"
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_128"
            android:importantForAccessibility="no"
            android:src="@drawable/splash"
            android:layout_marginTop="@dimen/dp_125"
            android:layout_centerHorizontal="true">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/fix_tests"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="@dimen/dp_38"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/choose"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="@dimen/dp_60"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/openBWTest"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_41"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_260"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/bw_test"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/openNoiseTest"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_41"
            android:layout_marginStart="@dimen/dp_170"
            android:layout_marginTop="@dimen/dp_260"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/noise_test"
            android:textSize="14sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/openChangeSnowFlakes"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_41"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_310"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/snow"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="TextSizeCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/openHorizontalLineTest"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_41"
            android:layout_marginStart="@dimen/dp_170"
            android:layout_marginTop="@dimen/dp_310"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/horizontal_line_test"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/openVerticalLineTest"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_41"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_360"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/vertical_line_test"
            android:textSize="14sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/openHorizontalRectangleTest"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_41"
            android:layout_marginStart="@dimen/dp_170"
            android:layout_marginTop="@dimen/dp_360"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/hori_rect_test"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/openVerticalRectangleTest"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_41"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_410"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/vertical_rectangle_test"
            android:textSize="14sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/openFixTest"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_41"
            android:layout_marginStart="@dimen/dp_170"
            android:layout_marginTop="@dimen/dp_410"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/fix_test"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="VisualLintButtonSize" />


        <TextView
            android:id="@+id/touchTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_490"
            android:gravity="center"
            android:text="@string/touch"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>