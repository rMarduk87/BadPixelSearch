<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Testo CENTRATO FISSO -->
            <TextView
                android:id="@+id/txtSelected"
                android:text="@string/gray_text"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Pulsante a DESTRA FISSO -->
            <ImageView
                android:id="@+id/font_change"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:contentDescription="@string/img"
                android:src="@drawable/ic_plus"
                app:tint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtSelected"
                app:layout_constraintBottom_toBottomOf="@id/txtSelected"
                android:layout_marginEnd="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ===== XSMALL ===== -->
        <TextView
            android:id="@+id/title_xsmall"
            android:layout_gravity="center"
            android:text="@string/calibri"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/xs_line1"
            android:text="@string/text_1"
            android:textColor="#888888"
            android:textSize="12sp"
            android:fontFamily="@font/calibri_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/xs_line2"
            android:text="@string/text_1_cap"
            android:textColor="#888888"
            android:textSize="12sp"
            android:fontFamily="@font/calibri_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/xs_line3"
            android:text="@string/text_numb_symbol"
            android:textColor="#888888"
            android:textSize="12sp"
            android:fontFamily="@font/calibri_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ===== SMALL ===== -->
        <TextView
            android:layout_gravity="center"
            android:id="@+id/title_small"
            android:text="@string/open_sans"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sm_line1"
            android:fontFamily="sans-serif"
            android:text="@string/text_1"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sm_line2"
            android:fontFamily="sans-serif"
            android:text="@string/text_1_cap"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sm_line3"
            android:fontFamily="sans-serif"
            android:text="@string/text_numb_symbol"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ===== MEDIUM ===== -->
        <TextView
            android:layout_gravity="center"
            android:id="@+id/title_medium"
            android:text="@string/kanit"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/md_line1"
            android:fontFamily="@font/kanit"
            android:text="@string/text_1"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/md_line2"
            android:fontFamily="@font/kanit"
            android:text="@string/text_1_cap"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/md_line3"
            android:fontFamily="@font/kanit"
            android:text="@string/text_numb_symbol"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ===== LARGE ===== -->
        <TextView
            android:layout_gravity="center"
            android:id="@+id/title_large"
            android:text="@string/cursive"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lg_line1"
            android:fontFamily="@font/great_vibes_regular"
            android:text="@string/text_1"
            android:textColor="#888888"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lg_line2"
            android:fontFamily="@font/great_vibes_regular"
            android:text="@string/text_1_cap"
            android:textColor="#888888"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lg_line3"
            android:fontFamily="@font/great_vibes_regular"
            android:text="@string/text_numb_symbol"
            android:textColor="#888888"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
