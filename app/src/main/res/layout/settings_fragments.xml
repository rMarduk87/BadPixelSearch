<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_background_search">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        app:contentInsetStart="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/left_icon_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_3"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/ic_back"
                    app:tint="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lbl_toolbar_title"
                    style="@style/toolbar_main_title"
                    android:text="@string/settings_t" />

            </LinearLayout>


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/lbl_active"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/automatic"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_16"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_automatic_mode"
                            android:layout_width="60dp"
                            android:layout_height="28dp"
                            android:background="@drawable/switch_back"
                            android:layout_gravity="center_vertical"
                            android:button="@null"
                            android:checked="false"
                            app:track="@null"
                            android:thumb="@null"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/speed_super_block"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/lbl_speed"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/speed"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_16" />

                        <LinearLayout
                            android:id="@+id/speed_block"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="end"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/dp_14" />

                            <ImageView
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_10"
                                android:src="@drawable/dropdown_arrow" />

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/interval"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="true"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="@string/interval"
                        android:textSize="@dimen/dp_15"
                        android:visibility="gone"
                        android:textColor="@color/white" />

                    <HorizontalScrollView
                        android:id="@+id/scrollView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:scrollbars="none">

                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/dp_20">

                            <RadioButton
                                android:id="@+id/rdo_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:background="@drawable/rdo_back_3"
                                android:text="1 Mins"
                                android:textColor="@drawable/rdo_back_3" />

                            <RadioButton
                                android:id="@+id/rdo_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:checked="true"
                                android:layout_marginStart="@dimen/dp_3"
                                android:background="@drawable/rdo_back_3"
                                android:text="5 Mins"
                                android:textColor="@drawable/rdo_back_3" />

                            <RadioButton
                                android:id="@+id/rdo_15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:layout_marginStart="@dimen/dp_3"
                                android:background="@drawable/rdo_back_3"
                                android:text="15 Mins"
                                android:textColor="@drawable/rdo_back_3" />

                            <RadioButton
                                android:id="@+id/rdo_30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:layout_marginStart="@dimen/dp_3"
                                android:background="@drawable/rdo_back_3"
                                android:text="30 Mins"
                                android:textColor="@drawable/rdo_back_3" />

                            <RadioButton
                                android:id="@+id/rdo_60"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:layout_marginStart="@dimen/dp_5"
                                android:background="@drawable/rdo_back_3"
                                android:text="1 Hour"
                                android:textColor="@drawable/rdo_back_3" />

                        </RadioGroup>

                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/lbl_fix"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/fix"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_16"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_fix_mode"
                            android:layout_width="60dp"
                            android:layout_height="28dp"
                            android:background="@drawable/switch_back"
                            android:layout_gravity="center_vertical"
                            android:button="@null"
                            android:checked="false"
                            app:track="@null"
                            android:thumb="@null"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/brightness"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/lbl_fix_light"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:text="@string/brightness"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_16"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_fix_light_mode"
                            android:layout_width="60dp"
                            android:layout_height="28dp"
                            android:background="@drawable/switch_back"
                            android:layout_gravity="center_vertical"
                            android:button="@null"
                            android:checked="false"
                            app:track="@null"
                            android:thumb="@null"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/delay_block"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/lbl_delay"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/text_delay"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_16" />

                        <SeekBar
                            android:id="@+id/delay"
                            style="@style/SeekBarColor"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:max="1500" />
                    </LinearLayout>



                </LinearLayout>

            </androidx.core.widget.NestedScrollView>



        </RelativeLayout>

    </LinearLayout>

</LinearLayout>