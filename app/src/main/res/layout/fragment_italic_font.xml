<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TITOLO SELEZIONE -->
        <TextView
            android:layout_marginTop="@dimen/dp_25"
            android:id="@+id/txtSelected"
            android:layout_gravity="center"
            android:text="@string/gray_text"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ===== XSMALL ===== -->
        <TextView
            android:id="@+id/title_xsmall"
            android:layout_gravity="center"
            android:text="@string/xsmall"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/xs_line1"
            android:text="@string/text_1"
            android:textColor="#888888"
            android:textSize="12sp"
            android:fontFamily="@font/calibri_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/xs_line2"
            android:text="@string/text_1_cap"
            android:textColor="#888888"
            android:textSize="12sp"
            android:fontFamily="@font/calibri_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/xs_line3"
            android:text="@string/text_numb_symbol"
            android:textColor="#888888"
            android:textSize="12sp"
            android:fontFamily="@font/calibri_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ===== SMALL ===== -->
        <TextView
            android:layout_gravity="center"
            android:id="@+id/title_small"
            android:text="@string/small"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sm_line1"
            android:fontFamily="@font/calibri_regular"
            android:text="@string/text_1"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sm_line2"
            android:fontFamily="@font/calibri_regular"
            android:text="@string/text_1_cap"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sm_line3"
            android:fontFamily="@font/calibri_regular"
            android:text="@string/text_numb_symbol"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ===== MEDIUM ===== -->
        <TextView
            android:layout_gravity="center"
            android:id="@+id/title_medium"
            android:text="@string/medium"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/md_line1"
            android:fontFamily="@font/calibri_regular"
            android:text="@string/text_1"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/md_line2"
            android:fontFamily="@font/calibri_regular"
            android:text="@string/text_1_cap"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/md_line3"
            android:fontFamily="@font/calibri_regular"
            android:text="@string/text_numb_symbol"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ===== LARGE ===== -->
        <TextView
            android:layout_gravity="center"
            android:id="@+id/title_large"
            android:text="@string/large"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lg_line1"
            android:fontFamily="@font/calibri_regular"
            android:text="@string/text_1"
            android:textColor="#888888"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lg_line2"
            android:fontFamily="@font/calibri_regular"
            android:text="@string/text_1_cap"
            android:textColor="#888888"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lg_line3"
            android:fontFamily="@font/calibri_regular"
            android:text="@string/text_numb_symbol"
            android:textColor="#888888"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
