<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo_animated"
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_128"
            android:importantForAccessibility="no"
            android:src="@drawable/splash"
            android:layout_marginTop="@dimen/dp_125"
            android:layout_centerHorizontal="true">

        </ImageView>

        <TextView
            android:id="@+id/appname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="@dimen/dp_38"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/choose"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="@dimen/dp_60"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/openColorTestMenuBtn"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_260"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/color_tests"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/openAnimationTestBtn"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_170"
            android:layout_marginTop="@dimen/dp_260"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/animation_test"
            android:textSize="14sp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/openSystemFontBtn"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_310"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/system_fonts"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="TextSizeCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/openRgbColorsBtn"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_170"
            android:layout_marginTop="@dimen/dp_310"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/rgb_colors"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/openCameraTests"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_360"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/camera_test"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="TextSizeCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/openFixPixelBtn"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_170"
            android:layout_marginTop="@dimen/dp_360"
            android:background="@drawable/walk_through_button_bg"
            android:text="@string/fix"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="VisualLintButtonSize" />

        <TextView
            android:id="@+id/touchTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_405"
            android:gravity="center"
            android:text="@string/touch"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />


    </RelativeLayout>
