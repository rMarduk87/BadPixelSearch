<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Testo CENTRATO FISSO -->
            <TextView
                android:id="@+id/txtSelected"
                android:text="@string/xsmall"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Pulsante a DESTRA FISSO -->
            <ImageView
                android:id="@+id/font_change"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:contentDescription="@string/img"
                android:src="@drawable/ic_plus"
                app:tint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtSelected"
                app:layout_constraintBottom_toBottomOf="@id/txtSelected"
                android:layout_marginEnd="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ===== XSMALL ===== -->

        <TextView
            android:id="@+id/text1"
            android:text="@string/text_r_1"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/text2"
            android:text="@string/text_r_2"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/text3"
            android:text="@string/text_r_3"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ===== SMALL ===== -->

        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/text4"
            android:text="@string/text_r_4"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>
