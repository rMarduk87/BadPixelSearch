<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:clickable="true"
    android:id="@+id/mainBG"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo_animated"
            android:layout_width="@dimen/dp_128"
            android:layout_height="@dimen/dp_128"
            android:src="@drawable/splash_image_mini"
            android:layout_marginTop="@dimen/dp_75"
            android:layout_centerHorizontal="true">

        </ImageView>

        <TextView
            android:id="@+id/appname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="@dimen/dp_38"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/slide"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="@dimen/dp_60"
            android:textColor="@color/white" />

        <Button
            android:text="@string/settings"
            android:background="@drawable/walk_through_button_bg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/openSettingsMenuBtn"
            android:layout_marginTop="@dimen/dp_215"
            android:layout_marginLeft="@dimen/dp_9"
            android:alpha="0.25"
            android:textSize="14dp" />

        <Button
            android:text="@string/send_req"
            android:background="@drawable/walk_through_button_bg"
            android:alpha="0.25"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/sendRequestBtn"
            android:textSize="14dp"
            android:layout_marginTop="@dimen/dp_215"
            android:layout_marginLeft="@dimen/dp_170" />

        <Button
            android:text="@string/faq"
            android:background="@drawable/walk_through_button_bg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/openFaqMenuBtn"
            android:layout_marginTop="@dimen/dp_265"
            android:layout_marginLeft="@dimen/dp_9"
            android:alpha="0.25"
            android:textSize="14dp" />

        <Button
            android:text="@string/screen_info"
            android:background="@drawable/walk_through_button_bg"
            android:alpha="0.25"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/screenInfoBtn"
            android:textSize="14dp"
            android:layout_marginTop="@dimen/dp_265"
            android:layout_marginLeft="@dimen/dp_170" />



        <TextView
            android:id="@+id/touchTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_320"
            android:gravity="center"
            android:text="@string/touch"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />






    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>